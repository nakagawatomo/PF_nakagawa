<table>
  <tbody>
      <% menu.menu_comments.each do |menu_comment| %>
      <tr>

        <td>
          <%= link_to user_path(menu_comment.user) do %>
            <%= image_tag menu_comment.user.get_profile_image, size: "100x100" %><br>
            <%= menu_comment.user.name %>
          <% end %>
        </td>
        <td><%= menu_comment.comment %></td>
        <td>
          <% if menu_comment.user == current_user %>
            <%= link_to "削除", menu_menu_comment_path(menu, menu_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>